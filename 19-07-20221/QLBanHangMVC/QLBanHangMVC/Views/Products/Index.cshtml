@*@model IEnumerable<QLBanHangMVC.Models.Product>*@
@model PagedList.IPagedList<QLBanHangMVC.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Quản lý sản phẩm";
}
<h2>Danh sách sản phẩm</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Tìm kiếm sản phẩm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên dsanh mục
        </th>
        <th>
            @Html.ActionLink("Tên hàng", "Index", new { sortOrder = ViewBag.SapTheoTen, currentFilter = ViewBag.CurrentFilter })
            @*@Html.DisplayNameFor(model => model.ProductName)*@
        </th>
        <th>
            @Html.ActionLink("Giá", "Index", new { sortOrder = ViewBag.SapTheoGia, currentFilter = ViewBag.CurrentFilter })
            @*@Html.DisplayNameFor(model => model.Price)*@
        </th>
        <th>
            Hình ảnh
        </th>
        <th>Tác vụ</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catalogy.CatalogyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @{
                    string ImagePath = "~/wwwroot/WineImages/" + item.Image;
                }
                <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
                <br />
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Xem", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
            </td>
        </tr>
    }

</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page,sortOrder = ViewBag.CurrentSort = ViewBag.CurrentFilter}));

